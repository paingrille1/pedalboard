# The same set of namespace prefixes with two additions for LV2 extensions this
# plugin uses: atom and urid.

@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
	
<http://paingrille.fr/plugins/pedalcontrol>
	a lv2:Plugin ;
	doap:name "Control midi pedal configuration" ;
	doap:license <http://opensource.org/licenses/isc> ;
	lv2:requiredFeature urid:map ;
	lv2:optionalFeature lv2:hardRTCapable ;


	lv2:port [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 0 ;
		lv2:symbol "exprt";
		lv2:name "expr-type" ;
# An lv2:ControlPort should always describe its default value, and usually a
# minimum and maximum value.  Defining a range is not strictly required, but
# should be done wherever possible to aid host support, particularly for UIs.
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 2.0 ;
		lv2:portProperty lv2:integer, lv2:enumeration ;
		lv2:scalePoint [
			rdfs:label "Expression" ;
            rdf:value 1.0
        ] , [
			rdfs:label "Drum" ;
            rdf:value 2.0
        ] , [
			rdfs:label "Tap Tempo" ;
            rdf:value 3.0
        ] 
		],[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 1 ;
		lv2:symbol "exprch";
		lv2:name "expr-channel" ;
# An lv2:ControlPort should always describe its default value, and usually a
# minimum and maximum value.  Defining a range is not strictly required, but
# should be done wherever possible to aid host support, particularly for UIs.
		lv2:default 10.0 ;
		lv2:minimum 1.0 ;
		lv2:maximum 16.0 ;
		lv2:portProperty lv2:integer;
		],[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "expraddr";
		lv2:name "expr-addr" ;
# An lv2:ControlPort should always describe its default value, and usually a
# minimum and maximum value.  Defining a range is not strictly required, but
# should be done wherever possible to aid host support, particularly for UIs.
		lv2:default 36.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 127.0 ;
		lv2:portProperty lv2:integer;
		],[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "exprcurve";
		lv2:name "expr-curve" ;
# An lv2:ControlPort should always describe its default value, and usually a
# minimum and maximum value.  Defining a range is not strictly required, but
# should be done wherever possible to aid host support, particularly for UIs.
		lv2:default 1.0 ;
		lv2:minimum 1.0 ;
		lv2:maximum 5.0 ;
		lv2:portProperty lv2:integer;
		],[
		a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		lv2:designation lv2:control ;
		lv2:index 4 ;
		lv2:symbol "MidiIn" ;
		lv2:name "Midi In"
	] ,[
		a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		lv2:designation lv2:control ;
		lv2:index 5 ;
		lv2:symbol "MidiOut" ;
		lv2:name "Midi Out"
	] .
